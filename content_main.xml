<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#3c3e52"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/app_name"
        android:text="HelPer"
        android:textColor="#63d5c4"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/txtPlate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/plate_number"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="45dp"
        android:text="Registration Number"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/plate_number"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPlate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#63d5c4"
        android:ems="10"
        android:hint="Vehicle Number"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray"
        android:visibility="visible"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/txtState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/plate_number"
        android:layout_below="@id/plate_number"
        android:layout_marginTop="30dp"
        android:text="State"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/state"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txtState"
        android:layout_below="@id/txtState"
        android:layout_marginTop="15dp"
        android:backgroundTint="#63d5c4"
        android:ems="10"
        android:hint="State"
        android:inputType="textPersonName"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray" />


    <TextView
        android:id="@+id/txtCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/plate_number"
        android:layout_below="@id/state"
        android:layout_marginTop="30dp"
        android:text="City"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/city"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/plate_number"
        android:layout_below="@id/txtCity"
        android:layout_marginTop="15dp"
        android:backgroundTint="#63d5c4"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray" />


    <Button
        android:id="@+id/search"
        android:layout_width="151dp"
        android:layout_height="38dp"
        android:layout_alignStart="@id/plate_number"
        android:layout_below="@id/city"
        android:layout_marginTop="45dp"
        android:background="@drawable/round_buttons"
        android:backgroundTint="#63d5c4"
        android:text="SEARCH"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/userButton"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/lefti_round_button"
        android:padding="0sp"
        android:text="User"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/policeButton"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/userButton"
        android:layout_marginStart="-73dp"
        android:layout_toEndOf="@+id/userButton"
        android:background="@drawable/right_round_button"
        android:text="Police"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="107dp"
        android:layout_height="97dp"
        android:layout_alignTop="@+id/txtState"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:visibility="gone"/>


</RelativeLayout>