<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c3e52"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PoliceLogin"
    tools:showIn="@layout/activity_police_login">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/app_name"
        android:text="HelPer"
        android:textColor="#63d5c4"
        android:textSize="45sp" />



    <TextView
        android:id="@+id/idtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@id/police_id"
        android:text="Police ID"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/police_id"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idtxt"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#63d5ca"
        android:ems="10"
        android:hint="Enter your ID"
        android:inputType="textPersonName"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/password"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/idtxt"
        android:layout_below="@id/passwordtxt"
        android:layout_marginTop="20dp"
        android:backgroundTint="#63d5ca"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/passwordtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/police_id"
        android:layout_marginTop="45dp"
        android:layout_alignStart="@+id/idtxt"
        android:text="Password"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <Button
        android:id="@+id/userButton"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/left_round_button2"
        android:padding="0sp"
        android:text="User"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/policeButton"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/userButton"
        android:layout_marginStart="-73dp"
        android:layout_toEndOf="@+id/userButton"
        android:background="@drawable/right_round_button2"
        android:text="Police"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/login"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_below="@id/password"
        android:layout_alignStart="@+id/idtxt"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_buttons"
        android:text="Login"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/register"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="93dp"
        android:backgroundTint="@color/colorPrimary"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Not a member?"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="107dp"
        android:layout_height="97dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:visibility="gone" />

</RelativeLayout>